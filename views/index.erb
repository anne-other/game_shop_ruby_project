<h2>Inventory</h2>

<form action="/inventory" method="post">

<label for="manufacturer-select">Filter By Manufacturer: </label>
<select id="manufacturer-select" name="manufacturer_id">
  <% @manufacturers.each do |manufacturer| %>
  <option value="<%= manufacturer.id %>"> <%= manufacturer.manufacturer_name() %></option>
  <%end%>
</select>

<input type="submit" value="Filter">

</form>

<table>
  <tr>
    <th>Product</th>
    <th>Manufacturer</th>
    <th>Stock</th>
    <th>Price</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td> <a href="/inventory/product/<%= product.id %>"> <%= product.product_name() %></a></td>
      <td> <a href="/inventory/manufacturer/<%= product.manufacturer_id %>"> <%= product.manufacturer().manufacturer_name()%> </a></td>
      <td class="<%= product.stock_check %>"><%= product.stock() %></td>
      <td>Â£<%= product.selling_price %></td>
    </tr>
  <% end %>
</table>

<h3>Manufacturers Without Products</h3>
<% @manufacturers_other.each do |manufacturer| %>
<p><a href="/inventory/manufacturer/<%= manufacturer.id %>"><%= manufacturer.manufacturer_name %></p>
<% end %>
