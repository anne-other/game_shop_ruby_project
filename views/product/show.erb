<h2>Product</h2>

<dl>
<dt>Name:</dt>
<dd> <%= @product.product_name()%></dd>
<dt>Description:</dt>
<dd> <%= @product.description() %></dd>
<dt>Stock:</dt>
<dd> <a class="<%= @product.stock_check()%>"> <%= @product.stock() %> </a></dd>
<dt>Buying Cost:</dt>
<dd> <%= @product.buying_cost() %></dd>
<dt>Selling Price:</dt>
  <dd> <%= @product.selling_price() %></dd>
<dt>Markup:</dt>
<dd> <%= @product.markup()%>%</dd>
</dl>

<form action="/inventory/product/<%= @product.id %>/edit" method="get">
  <input type="submit" value="Update Product">
</form>

<form action="/inventory/product/<%= @product.id %>/delete" method="post">
  <input type="submit" value="Delete Product">
</form>
