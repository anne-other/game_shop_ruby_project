<h1>Product</h1>

<p>Name: <%= @product.product_name()%></p>
<p>Description: <%= @product.description() %></p>
<p>Stock: <a class="<%= @product.stock_check()%>"> <%= @product.stock() %> </a></p>
<p>Buying Cost <%= @product.buying_cost() %></p>
<p>Selling Price: <%= @product.selling_price() %></p>

<form action="/inventory/product/<%= @product.id %>/edit" method="get">
  <input type="submit" value="Update Product">
</form>

<form action="/inventory/product/<%= @product.id %>/delete" method="post">
  <input type="submit" value="Delete Product">
</form>
